<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    tools:context="techgroup.com.slaeyplay.VideoActivity">

    <ImageView
        android:id="@+id/slaeyimage"
        android:layout_width="250dp"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:baselineAligned="false"
        android:src="@drawable/music_logo"
        android:textAlignment="center" />

      <TextView
          android:id="@+id/text_slaeyMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SlaeyMusic"
        android:textAlignment="center"
        android:textSize="19sp"
        android:layout_below="@+id/slaeyimage"/>

    <ToggleButton
        android:id="@+id/play_pause"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_slaeyMusic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textOn="play"
        android:textOff="pause"
         />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="Stop" />




</RelativeLayout>
